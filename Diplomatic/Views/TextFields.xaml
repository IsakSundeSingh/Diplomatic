<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Diplomatic.ViewModels"
             x:Class="Diplomatic.Views.TextFields"
             Title="Credentials">

    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource backgroundColor}">
        <StackLayout Padding="20,0,20,0" Orientation="Vertical">
            <!-- A little bit of padding from each side is added so the fields aren't as ugly -->
            <Label Text="Submit your credentials" HorizontalOptions="Center"/>
            <ListView ItemsSource="{Binding SelectedTemplate.Fields}" SeparatorVisibility="None">
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <ViewCell>
                        <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                               </Grid.RowDefinitions>
                            <Entry Grid.Column="0" Placeholder="{Binding Name}" Text="{Binding Value}"/>
                        </Grid>
                            </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
            <Button Text="Next"
                    Clicked="NextPage"
                    Style="{StaticResource nextPageButton}"
                    WidthRequest="50"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
